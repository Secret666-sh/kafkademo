<configuration>
    　　　<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    　　　　　 <encoder>
    　　　　　　　　　<pattern>%date [%level] [%thread] %logger{60} [%file : %line] %msg%n</pattern>
    　　　　　 </encoder>
    　　　</appender>

    　　　<root level="info">
    　　　　　　<appender-ref ref="STDOUT" />
    　　　</root>
</configuration>